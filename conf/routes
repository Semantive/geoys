# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET        /                               controllers.Application.index

GET        /rest/children/                 controllers.Rest.children(geonameId: Int, lang: String)

GET        /rest/countryInfo/geoId/        controllers.Rest.countryInfoByGeoId(geonameId: Int, lang: String)

GET        /rest/countryInfo/iso/          controllers.Rest.countryInfoByIso(iso2Code: String, lang: String)

GET        /rest/featureInfo/              controllers.Rest.featureInfo(geonameId: Int, lang: String)

GET        /rest/siblings/                 controllers.Rest.siblings(geonameId: Int, lang: String)

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file                   controllers.Assets.at(path="/public", file)
